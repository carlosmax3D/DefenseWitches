<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/white" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textStyle="bold" android:textColor="@android:color/holo_blue_light" android:gravity="center" android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Share on twitter" android:textAllCaps="true"/>
    <TextView android:id="@+id/link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_below="@+id/edtShare"/>
    <TextView android:id="@+id/url" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_below="@+id/link"/>
    <View android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/url">
        <View android:background="@android:color/darker_gray" android:layout_width="1dp" android:layout_height="match_parent"/>
        <Button android:gravity="center" android:id="@+id/btnCancel" android:background="@drawable/background_select" android:layout_width="0dp" android:layout_height="48dp" android:text="Cancel" android:layout_weight="1" android:textAllCaps="true" style="?android:attr/buttonBarButtonStyle"/>
        <View android:background="@android:color/darker_gray" android:layout_width="1dp" android:layout_height="match_parent"/>
        <Button android:gravity="center" android:id="@+id/btnTwitter" android:background="@drawable/background_select" android:layout_width="0dp" android:layout_height="48dp" android:text="Done" android:layout_weight="1" android:textAllCaps="true" style="?android:attr/buttonBarButtonStyle"/>
        <View android:background="@android:color/darker_gray" android:layout_width="1dp" android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignBottom="@+id/content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
</RelativeLayout>
